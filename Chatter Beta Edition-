user_input = input("I am not an AI. Lets chat anyway. Go on, say something.  ")

if "hello" in user_input.lower():
    print("Hi there!")
elif "hi" in user_input.lower():
    print("Hello fello bufello!")
elif "how are you" in user_input.lower():
    print("I'm just a bot, but I'm doing great!")
elif "please" in user_input.lower():
    print("You are a polite lil fella")
else:
    print("I don't understand that.")
    
username = input("What is your name?")
